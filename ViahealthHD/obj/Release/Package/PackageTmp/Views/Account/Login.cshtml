@model ViahealthHD.Models.LoginViewModel






    <div class="row justify-content-center">

        <div class="">

            <div class="card my-5"style="border-radius:25px">
                <div class="card-body " style="padding-left: 40px;padding-right: 40px">
                    <h5 class="card-title text-center">Sign In</h5>

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
                @Html.AntiForgeryToken()
                <div class="form-label-group">
                    <input style="border-radius:25px;margin-bottom:20px" type="text" id="Username" name="username" class="form-control mx-auto" placeholder="Username" required autofocus>

                </div>

                <div class="form-label-group">
                    <input style="border-radius:25px" type="password" id="Password" name="password" class="form-control mx-auto" required placeholder="Password">

                </div>

                <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                    <label class="custom-control-label" for="customCheck1">Remember password</label>
                </div>
                <div class="form-label-group">
                    <button style="border-radius:25px" class="btn btn-primary text-uppercase form-control mx-auto" type="submit">Sign in</button>

                </div>
                @Html.ActionLink("Forgot password?", "forgotpassword", "account")
                <hr class="my-4">


                <a class="btn btn-block text-uppercase" href="/account/register">Register</a>
}
                </div>

                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                </div>
                    
        </div>

    </div>
    







